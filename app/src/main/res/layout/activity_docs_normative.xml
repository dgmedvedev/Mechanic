<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/menu_button4"
                android:textSize="20sp"
                android:fontFamily="@font/monda_bold"
                android:textColor="@color/light_blue"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <Button
                    android:id="@+id/resolution44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resolution3"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:layout_marginTop="18dp"/>
            <Button
                    android:id="@+id/resolution141"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resolution141"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:layout_marginTop="18dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>