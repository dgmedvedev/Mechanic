<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <TextView
            android:id="@+id/tvBrand"
            style="@style/tvDetailsName"
            android:text="@string/brand"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etBrand"
            style="@style/DetailsText"
            android:autofillHints="name"
            android:hint="@string/add_brand"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvModel"
            style="@style/tvDetailsName"
            android:text="@string/model"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etBrand" />

        <EditText
            android:id="@+id/etModel"
            style="@style/DetailsText"
            android:autofillHints="name"
            android:hint="@string/add_model"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etBrand" />

        <TextView
            android:id="@+id/tvYearProduction"
            style="@style/tvDetailsName"
            android:text="@string/year_production"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etModel" />

        <EditText
            android:id="@+id/etYearProduction"
            style="@style/DetailsText"
            android:autofillHints="creditCardExpirationDate"
            android:hint="@string/add_year_production"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etModel" />

        <TextView
            android:id="@+id/tvStateNumber"
            style="@style/tvDetailsName"
            android:text="@string/state_number"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etYearProduction" />

        <EditText
            android:id="@+id/etStateNumber"
            style="@style/DetailsText"
            android:autofillHints="name"
            android:hint="@string/add_state_number"
            android:inputType="number|text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etYearProduction" />

        <TextView
            android:id="@+id/tvBodyNumber"
            style="@style/tvDetailsName"
            android:text="@string/body_number"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etStateNumber" />

        <EditText
            android:id="@+id/etBodyNumber"
            style="@style/DetailsText"
            android:autofillHints="name"
            android:hint="@string/add_body_number"
            android:inputType="number|text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etStateNumber" />

        <TextView
            android:id="@+id/tvEngineDisplacement"
            style="@style/tvDetailsName"
            android:text="@string/engine_displacement"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etBodyNumber" />

        <EditText
            android:id="@+id/etEngineDisplacement"
            style="@style/DetailsText"
            android:autofillHints="name"
            android:hint="@string/add_engine_displacement"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etBodyNumber" />

        <TextView
            android:id="@+id/tvFuelType"
            style="@style/tvDetailsName"
            android:text="@string/fuel_type"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etEngineDisplacement" />

        <EditText
            android:id="@+id/edFuelType"
            style="@style/DetailsText"
            android:autofillHints="name"
            android:hint="@string/add_fuel_type"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/etEngineDisplacement" />

        <TextView
            style="@style/tvDetailsName"
            android:text="@string/allowable_weight" />

        <EditText
            android:id="@+id/allowableWeightEditText"
            style="@style/DetailsText"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/tvDetailsName"
            android:text="@string/technical_passport" />

        <EditText
            android:id="@+id/technicalPassportEditText"
            style="@style/DetailsText" />

        <TextView
            style="@style/tvDetailsName"
            android:text="@string/checkup" />

        <EditText
            android:id="@+id/checkupEditText"
            style="@style/DetailsText"
            android:inputType="date" />

        <TextView
            style="@style/tvDetailsName"
            android:text="@string/insurance" />

        <EditText
            android:id="@+id/insuranceEditText"
            style="@style/DetailsText"
            android:inputType="date" />

        <TextView
            style="@style/tvDetailsName"
            android:text="@string/hull_insurance" />

        <EditText
            android:id="@+id/hullInsuranceEditText"
            style="@style/DetailsText"
            android:inputType="date" />

        <Button
            android:id="@+id/save"
            style="@style/delete_button"
            android:text="@string/save" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>