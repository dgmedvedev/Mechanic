<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity"
              android:padding="10dp">

    <LinearLayout
            style="@style/LinearLayoutMenu">
        <Button
                android:id="@+id/carsButton"
                android:text="@string/menu_button1"
                android:layout_marginEnd="5dp"
                style="@style/ButtonMenu"
                android:drawableTop="@drawable/button_car_selector"/>
        <Button
                android:id="@+id/driversButton"
                android:text="@string/menu_button2"
                android:layout_marginStart="5dp"
                style="@style/ButtonMenu"
                android:drawableTop="@drawable/button_drivers_selector"/>
    </LinearLayout>

    <LinearLayout
            style="@style/LinearLayoutMenu">
        <Button
                android:id="@+id/fuelButton"
                android:text="@string/menu_button3"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="@style/ButtonMenu"
                android:drawableTop="@drawable/button_nrt_selector"/>
        <Button
                android:id="@+id/docsButton"
                android:text="@string/menu_button4"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="@style/ButtonMenu"
                android:drawableTop="@drawable/button_docs_selector"/>
    </LinearLayout>

    <LinearLayout
            style="@style/LinearLayoutMenu">
        <Button
                android:id="@+id/settingsButton"
                android:text="@string/menu_button5"
                android:layout_marginEnd="5dp"
                style="@style/ButtonMenu"
                android:drawableTop="@drawable/button_settings_selector"/>
        <Button
                android:id="@+id/aboutAppButton"
                android:text="@string/menu_button6"
                android:layout_marginStart="5dp"
                style="@style/ButtonMenu"
                android:drawableTop="@drawable/button_about_app_selector"/>
    </LinearLayout>

</LinearLayout>